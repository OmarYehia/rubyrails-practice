<div class="container mt-5">
    <p>
    <strong>Title:</strong>
    <%= @article.title %>
    </p>
    
    <p>
    <strong>Text:</strong>
    <%= @article.text %>
    </p>

    <h2>Comments</h2>
    <%= render @article.comments %>

    <% if user_signed_in? %>
    <h2>Add a comment:</h2>
    <%= render 'comments/form' %>
    <% end %>

    <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-primary btn-sm mt-5' %>
    <%= link_to 'Back', articles_path, class: 'btn btn-outline-primary btn-sm mt-5' %>
</div>